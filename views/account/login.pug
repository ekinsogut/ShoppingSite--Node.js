extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 !{errorMessage}
    form(action="/login" method="POST")
        .form-group.row
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            label(for="email").col-sm-2.col-form-label Email
            .col-sm-10.pr-0
                input.form-control#email(type="text" name="email")

        .form-group.row
            label(for="password").col-sm-2.col-form-label Password
            .col-sm-10
                input.form-control#password(type="text" name="password")

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Submit").btn.btn-primary

        .form-group.row
            .col-sm-10.offset-sm-2
                a(href="/reset-password").btn.btn-link.p-0 Reset Password